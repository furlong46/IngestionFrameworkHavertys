			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureDatabricks",
				"typeProperties": {
					"domain": "https://adb-4601262962204989.9.azuredatabricks.net/?o=4601262962204989#",
					"accessToken": {
						"type": "AzureKeyVaultSecret",
						"store": {
							"referenceName": "ls_KV",
							"type": "LinkedServiceReference"
						},
						"secretName": "DBXToken"
